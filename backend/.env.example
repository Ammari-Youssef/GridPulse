# ===================================================================
# Database Configuration (Docker & Local)
# ===================================================================

DB_USER=postgres
DB_PASS=changeme
DB_NAME=gridpulse_cloud

# JDBC URL used by Spring Boot (Docker service name)
DB_URL=jdbc:postgresql://postgres:5432/gridpulse_cloud
DB_DRIVER=org.postgresql.Driver
DB_DIALECT=org.hibernate.dialect.PostgreSQLDialect


# ===================================================================
# Spring Boot Default Credentials (Actuator, Basic Auth)
# ===================================================================

SPRING_SECURITY_USER_NAME=admin
SPRING_SECURITY_USER_PASSWORD=changeme


# ===================================================================
# JWT Configuration
# ===================================================================

JWT_SECRET_KEY=REPLACE_WITH_A_SECURE_RANDOM_KEY
JWT_EXPIRATION_TIME=86400000          # 1 day
REFRESH_EXPIRATION_TIME=604800000     # 7 days
