<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="create_message_table" author="youssef">
        <createTable tableName="messages">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_messages"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="DATETIME"/>
            <column name="created_by" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="updated_by" type="VARCHAR(255)"/>
            <column name="source" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="device_id" type="UUID"/>
            <column name="fleet_id" type="UUID"/>
            <column name="cloud_message_id" type="VARCHAR(255)"/>
            <column name="message_text" type="TEXT"/>
            <column name="received_at" type="DATETIME"/>
            <column name="sent_at" type="DATETIME"/>
            <column name="severity" type="VARCHAR(255)"/>
            <column name="message_type" type="VARCHAR(255)"/>
        </createTable>

        <addUniqueConstraint columnNames="cloud_message_id" constraintName="uc_messages_cloud_message_id"
                             tableName="messages"/>

        <addForeignKeyConstraint baseColumnNames="device_id" baseTableName="messages"
                                 constraintName="FK_MESSAGES_ON_DEVICE" referencedColumnNames="id"
                                 referencedTableName="device"/>
        <rollback>
            <sql>DROP TABLE IF EXISTS messages;</sql>
            <dropUniqueConstraint constraintName="uc_messages_cloud_message_id" tableName="messages"/>
            <dropForeignKeyConstraint baseTableName="messages" constraintName="FK_MESSAGES_ON_DEVICE"/>
        </rollback>
    </changeSet>

</databaseChangeLog>