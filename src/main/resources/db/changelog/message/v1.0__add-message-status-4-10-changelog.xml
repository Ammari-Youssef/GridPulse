<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="add_status_column_to_message_and_message_history_tables_v1" author="youssef">
        <addColumn tableName="message_history">
            <column name="status" type="VARCHAR(255)"/>
        </addColumn>
        <addColumn tableName="messages">
            <column name="status" type="VARCHAR(255)"/>
        </addColumn>

        <rollback>
            <dropColumn columnName="status" tableName="message_history"/>
            <dropColumn columnName="status" tableName="messages"/>
        </rollback>
    </changeSet>

</databaseChangeLog>