<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="create_settings_tables" author="youssef">
        <createTable tableName="inv_settings">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_invsettings"/>
            </column>
            <column name="model_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="model_length" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="inverter_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="DATETIME"/>
            <column name="created_by" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="updated_by" type="VARCHAR(255)"/>
            <column name="source" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="w_max" type="INT"/>
            <column name="v_ref" type="INT"/>
            <column name="v_ref_ofs" type="INT"/>
            <column name="v_max" type="INT"/>
            <column name="v_min" type="INT"/>
            <column name="va_max" type="INT"/>
            <column name="var_maxq1" type="INT"/>
            <column name="var_maxq2" type="INT"/>
            <column name="var_maxq3" type="INT"/>
            <column name="var_maxq4" type="INT"/>
            <column name="w_gra" type="INT"/>
            <column name="pf_minq1" type="INT"/>
            <column name="pf_minq2" type="INT"/>
            <column name="pf_minq3" type="INT"/>
            <column name="pf_minq4" type="INT"/>
            <column name="var_act" type="VARCHAR(255)"/>
            <column name="clc_tot_va" type="VARCHAR(255)"/>
            <column name="max_rmp_rte" type="INT"/>
            <column name="ecp_nom_hz" type="INT"/>
            <column name="conn_ph" type="VARCHAR(255)"/>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="inverter_id" baseTableName="inv_settings"
                                 constraintName="FK_INVSETTINGS_ON_INVERTER" referencedColumnNames="id"
                                 referencedTableName="inverter"/>

        <createTable tableName="inv_settings_history">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_invsettingshistory"/>
            </column>
            <column name="model_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="model_length" type="INT"/>
            <column name="inverter_id" type="UUID"/>
            <column name="original_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="created_record" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="updated_record" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="deleted_record" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="synced" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="DATETIME"/>
            <column name="created_by" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="updated_by" type="VARCHAR(255)"/>
            <column name="source" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="w_max" type="INT"/>
            <column name="v_ref" type="INT"/>
            <column name="v_ref_ofs" type="INT"/>
            <column name="v_max" type="INT"/>
            <column name="v_min" type="INT"/>
            <column name="va_max" type="INT"/>
            <column name="var_maxq1" type="INT"/>
            <column name="var_maxq2" type="INT"/>
            <column name="var_maxq3" type="INT"/>
            <column name="var_maxq4" type="INT"/>
            <column name="w_gra" type="INT"/>
            <column name="pf_minq1" type="INT"/>
            <column name="pf_minq2" type="INT"/>
            <column name="pf_minq3" type="INT"/>
            <column name="pf_minq4" type="INT"/>
            <column name="var_act" type="VARCHAR(255)"/>
            <column name="clc_tot_va" type="VARCHAR(255)"/>
            <column name="max_rmp_rte" type="INT"/>
            <column name="ecp_nom_hz" type="INT"/>
            <column name="conn_ph" type="VARCHAR(255)"/>
        </createTable>

        <createIndex indexName="idx_invSettings_history_original_id" tableName="inv_settings_history">
            <column name="original_id"/>
        </createIndex>

        <rollback>
            <dropTable tableName="inv_settings"/>
            <dropTable tableName="inv_settings_history"/>
        </rollback>
    </changeSet>

</databaseChangeLog>