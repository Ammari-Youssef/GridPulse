<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="create_inverter_history_device_ids_collection_table" author="youssef">
        <createTable tableName="inverter_history_device_ids">
            <column name="inverter_history_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="device_ids" type="UUID"/>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="inverter_history_id" baseTableName="inverter_history_device_ids"
                                 constraintName="fk_inverter_history_device_ids_on_inverter_history"
                                 referencedColumnNames="id" referencedTableName="inverter_history"/>

        <rollback>
            <dropTable tableName="inverter_history_device_ids"/>
        </rollback>
    </changeSet>

</databaseChangeLog>