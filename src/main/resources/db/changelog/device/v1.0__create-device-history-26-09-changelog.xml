<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="create_device_history_table" author="youssef">
        <createTable tableName="device_history">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_devicehistory"/>
            </column>
            <column name="original_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="created_record" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="updated_record" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="deleted_record" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="synced" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="DATETIME"/>
            <column name="created_by" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="updated_by" type="VARCHAR(255)"/>
            <column name="source" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="soc" type="FLOAT"/>
            <column name="soh" type="VARCHAR(255)"/>
            <column name="battery_chemistry" type="VARCHAR(255)"/>
            <column name="cycles" type="INT"/>
            <column name="gps_lat" type="DOUBLE"/>
            <column name="gps_long" type="DOUBLE"/>
            <column name="name" type="VARCHAR(255)"/>
            <column name="last_seen" type="DATETIME"/>
            <column name="power_dispatched" type="FLOAT"/>
            <column name="status" type="VARCHAR(255)"/>
            <column name="temperature" type="FLOAT"/>
            <column name="voltage" type="FLOAT"/>
            <column name="model" type="VARCHAR(255)"/>
            <column name="manufacturer" type="VARCHAR(255)"/>
            <column name="software_version" type="VARCHAR(255)"/>
            <column name="user_id" type="UUID"/>
            <column name="operator_id" type="UUID"/>
            <column name="inverter_id" type="UUID"/>
        </createTable>
        <rollback >
            <dropTable tableName="device_history" />
        </rollback>

    </changeSet>

</databaseChangeLog>