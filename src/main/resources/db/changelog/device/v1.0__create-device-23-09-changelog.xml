<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="create_device_table" author="youssef">
        <createTable tableName="device">

            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_device"/>
            </column>

            <column name="soc" type="FLOAT"/>
            <column name="soh" type="VARCHAR(10)"/>
            <column name="battery_chemistry" type="VARCHAR(50)"/>
            <column name="cycles" type="INT"/>
            <column name="gps_lat" type="DOUBLE"/>
            <column name="gps_long" type="DOUBLE"/>
            <column name="last_seen" type="DATETIME"/>
            <column name="name" type="VARCHAR(255)"/>
            <column name="power_dispatched" type="FLOAT"/>
            <column name="status" type="VARCHAR(20)"/>
            <column name="temperature" type="FLOAT"/>
            <column name="voltage" type="FLOAT"/>
            <column name="model" type="VARCHAR(100)"/>
            <column name="manufacturer" type="VARCHAR(100)"/>
            <column name="software_version" type="VARCHAR(50)"/>

            <column name="user_id" type="UUID"/>
            <column name="operator_id" type="UUID"/>
            <column name="inverter_id" type="UUID"/>

            <column name="created_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="DATETIME"/>
            <column name="created_by" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="updated_by" type="VARCHAR(255)"/>
            <column name="source" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <rollback>
            <dropTable tableName="device"/>
        </rollback>

    </changeSet>
    <changeSet id="add_inverter_id_fk_to_device" author="youssef">
        <addForeignKeyConstraint baseColumnNames="inverter_id" baseTableName="device"
                                 constraintName="FK_DEVICE_ON_INVERTER" referencedColumnNames="id"
                                 referencedTableName="inverter"/>

        <rollback>
            <dropForeignKeyConstraint baseTableName="device" constraintName="FK_DEVICE_ON_INVERTER"/>
        </rollback>
    </changeSet>
    <changeSet id="add_user_id_fk_to_device" author="youssef">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="device" constraintName="FK_DEVICE_ON_USER"
                                 referencedColumnNames="id" referencedTableName="_user"/>

        <rollback>
            <dropForeignKeyConstraint baseTableName="device" constraintName="FK_DEVICE_ON_USER"/>
        </rollback>
    </changeSet>

</databaseChangeLog>