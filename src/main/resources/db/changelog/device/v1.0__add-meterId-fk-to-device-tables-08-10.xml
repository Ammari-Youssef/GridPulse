<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="add_meterId_fk_to_device_device-history_tables" author="youssef" failOnError="false" runOnChange="true">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists columnName="meter_id" tableName="meter"/>
            </not>
        </preConditions>

        <addColumn tableName="device">
            <column name="meter_id" type="UUID"/>
        </addColumn>
        <addForeignKeyConstraint baseColumnNames="meter_id" baseTableName="device" constraintName="FK_DEVICE_ON_METER"
                                 referencedColumnNames="id" referencedTableName="meter"/>
        <addUniqueConstraint columnNames="meter_id" constraintName="uc_device_meter" tableName="device"/>
        <addColumn tableName="device_history">
            <column name="meter_id" type="UUID"/>
        </addColumn>

        <rollback>
            <dropForeignKeyConstraint baseTableName="device" constraintName="FK_DEVICE_ON_METER"/>
            <dropUniqueConstraint tableName="device" constraintName="uc_device_meter"/>
            <dropColumn tableName="device" columnName="meter_id"/>
            <dropColumn tableName="device_history" columnName="meter_id"/>
        </rollback>
    </changeSet>

</databaseChangeLog>