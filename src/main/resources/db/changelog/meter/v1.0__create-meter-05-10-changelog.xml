<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="create_meter_table" author="youssef" failOnError="false" runOnChange="true">

        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="meter"/>
            </not>
        </preConditions>

        <comment>
            Create the meter table to store information about meters. if it doesn't exist. Skips cleanly if already present to avoid migration errors.
        </comment>

        <createTable tableName="meter">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_meter"/>
            </column>
            <column name="created_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="DATETIME"/>
            <column name="created_by" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="updated_by" type="VARCHAR(255)"/>
            <column name="source" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="model" type="VARCHAR(255)"/>
            <column name="manufacturer" type="VARCHAR(255)"/>
            <column name="version" type="VARCHAR(255)"/>
        </createTable>

        <rollback>
            <sql>DROP TABLE IF EXISTS meter;</sql>
        </rollback>
    </changeSet>

</databaseChangeLog>