type InvCommon implements SunSpecModelAuditable & Auditable {
    id: ID!

    # SunSpec fields
    modelId: Int!         # Constant value (e.g., 1)
    modelLength: Int!    # L in SunSpec

    # Metadata fields
    manufacturer: String!
    model: String!
    options: String
    version: String
    serialNumber: String
    deviceAddress: Int!
    pad: Int

    # Relationship
    inverter: Inverter!

    # Auditing fields
    createdBy: String!
    updatedBy: String
    createdAt: String!
    updatedAt: String
    source: Source!
}
